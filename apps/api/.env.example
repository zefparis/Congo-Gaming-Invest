# Configuration de la base de données
DATABASE_URL=postgres://cg_user:280470@127.0.0.1:5432/congogaming_clean

# Configuration JWT
JWT_SECRET=your-secret-key-32-characters-long
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Configuration CORS (séparer par des virgules) - inclure domaines Vercel en prod
CORS_ALLOWED_ORIGINS=http://localhost:5173,https://app.example.com

# Préfixe d'API (ex: /v1). Laisser vide pour désactiver le prefix.
API_PREFIX=v1

# Configuration du serveur
PORT=4000
NODE_ENV=development
LOG_LEVEL=debug

# Configuration du rate limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=30

# Configuration des fournisseurs de paiement
PAYMENT_PROVIDER_TIMEOUT=30000

# Configuration des logs
LOG_LEVEL=debug
LOG_FORMAT=json

# Configuration pour l'envoi d'emails (à configurer plus tard)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@congogaming.com
